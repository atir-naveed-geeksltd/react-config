{
  "name": "react-config",
  "version": "1.0.0",
  "description": "Basic babel, rollup, webpack, semantic-release, jest, stylelint, eslint, prettier & typescript configs",
  "main": "index.js",
  "author": "Atir Naveed <atir.naveed@geeks.ltd.uk>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "Geeks",
    "babel",
    "eslint",
    "rollup",
    "semantic-release",
    "prettier",
    "tsconfig",
    "configs"
  ],
 
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-lerna-scopes"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-lerna-scopes": "^15.0.0",
    "commitizen": "4.0.3",
    "cross-env": "^7.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "husky": "^7.0.4",
    "jest": "27.0.4",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.1"
  }
}
